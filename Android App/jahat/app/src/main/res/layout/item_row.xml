<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/edittext_rounded_corners_02"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"
    android:weightSum="1"
    android:orientation="vertical"
    android:id="@+id/bgOfRow">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/no_avatar"
                android:id="@+id/avatar_img" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="0000000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/numberMember_tx02"
                    android:layout_weight="0.4"
                    android:gravity="right" />

                <TextView
                    android:text="تعداد اعضا:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/numberMember_tx01"
                    android:layout_weight="0.1" />
                <TextView
                    android:text="کانال"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/type_tx02"
                    android:layout_weight="0.4"
                    android:gravity="right"/>

                <TextView
                    android:text="نوع:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/type_tx01"
                    android:layout_weight="0.1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="گیزمیز"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/title_tx02"
                    android:layout_weight="0.9"
                    android:gravity="right"/>

                <TextView
                    android:text="نام:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/title_tx01"
                    android:layout_weight="0.1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="tlgrm.me/jili_pili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/address_tx02"
                    android:autoLink="web"
                    android:textColorLink="@color/colorPrimary"
                    android:layout_weight="0.9"
                    android:gravity="right"/>

                <TextView
                    android:text="آدرس:"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_tx01"
                    android:layout_weight="0.1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_rounded_corners"
            android:weightSum="1"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">
            <TextView
                android:text="...."
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:id="@+id/comment_tx02"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
