<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layoutDirection="ltr"
    tools:context="com.fardan7eghlim.jahat.MainActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_01"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                android:gravity="center_horizontal"
                android:text="جست و جوی هوشمند تلگرام" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_01"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/newVersionMessage">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/newVersionLinkBox">

            <TextView
                android:id="@+id/newVersionLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_login_bg"
                android:autoLink="web"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:text="نسخه ی جدید برنامه آماده ی دانلود است." />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="به روز رسانی"
                android:id="@+id/btnUpdate"
                android:textColor="@color/btn_login_bg"
                android:background="@drawable/button_01"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layoutDirection="ltr"
        android:background="@drawable/edittext_rounded_corners_02"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_gravity="right"
                android:layout_weight="0.75" />
            <TextView
                android:text="جست و جو:"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/catTypesTiltle"
                android:layout_weight="0.25" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_box_layout"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="چیزی بنویسید...."
                android:paddingLeft="15dp"
                android:textColorHint="#a5a09c"
                android:background="@drawable/edittext_rounded_search_box"
                android:ems="10"
                android:textColor="@color/btn_login_bg"
                android:id="@+id/search_et"
                android:layout_weight="1"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/search"
                android:background="@drawable/button_search"
                android:id="@+id/search_btn"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_01"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/mad_max">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/jilipili_part">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:srcCompat="@drawable/jilipili_logo"
                            android:id="@+id/jilipili_logo"
                            android:layout_weight="0.2" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">

                            <TextView
                                android:text="لطفا برای حمایت و پیشرفت برنامه،عضو کانال جیلی پیلی شوید.کانالی پر از مطالب طنز،سرگرمی،ترفند و..."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/jilipili_title02"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal" />
                            <TextView
                                android:text="https://telegram.me/jili_pili"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/jilipili_title"
                                android:autoLink="none"
                                android:textSize="18dp"
                                android:textColorLink="@color/colorPrimaryDark"
                                android:textColor="@color/colorPrimary"
                                android:layout_weight="1"
                                android:gravity="center_horizontal" />
                            <TextView
                                android:text="مچکریم"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/jilipili_title03"
                                android:textSize="16dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_weight="1"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/mad_part"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/jilipili_logo"
                            android:id="@+id/mad_01"
                            android:padding="5dp"
                            android:background="@drawable/frame_01"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/jilipili_logo"
                            android:id="@+id/mad_02"
                            android:padding="5dp"
                            android:background="@drawable/frame_02"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/frame_01"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <Button
                        android:id="@+id/btnAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/button_01"
                        android:textColor="@color/btn_login_bg"
                        android:text="ثبت کانال،گروه و... جدید"
                        android:textAllCaps="false"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/button_01"
                        android:textColor="@color/btn_login_bg"
                        android:text="ویرایش ثبت شده ها"
                        android:textAllCaps="false"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnLastSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/button_01"
                        android:textColor="@color/btn_login_bg"
                        android:text="آخرین جست و جوی شما"
                        android:textAllCaps="false"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/button_01"
                        android:textColor="@color/btn_login_bg"
                        android:textAllCaps="false"
                        android:textSize="15dp"
                        android:text="درباره برنامه" />

                    <Button
                        android:id="@+id/btnBestChannels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/button_01"
                        android:textColor="@color/btn_login_bg"
                        android:text="کانال های شما"
                        android:textAllCaps="false"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnChangeLang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/button_01"
                        android:textColor="@color/btn_login_bg"
                        android:text="تغییر زبان"
                        android:textAllCaps="false"
                        android:textSize="15dp" />
                    <Button
                        android:id="@+id/btnExit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/button_01"
                        android:textColor="@color/btn_login_bg"
                        android:text="خروج"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textSize="15dp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
