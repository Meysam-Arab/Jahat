<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layoutDirection="ltr"
    android:background="@drawable/bg"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fardan7eghlim.jahat.AddNewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/frame_02"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/f7e_logo"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/f7e_logo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="16dp"
                android:text="کاری از شرکت هوش مصنوعی فردان هفت اقلیم"
                android:id="@+id/pic_02_tv"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="16dp"
                android:autoLink="web"
                android:textColorLink="@color/colorPrimary"
                android:text="www.f7e.ir"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="16dp"
                android:autoLink="web"
                android:textColorLink="@color/colorPrimary"
                android:text="www.fardan7eghlim.ir"
                android:id="@+id/pic_03_tv"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14dp"
                android:text="در حال حاضر تنها راه جستجو در تلگرام جستجوی آی دی (به طور دقیق) می باشد. علاوه بر این، براساس ماهیت نمی توان جستجویی را در تلگرام انجام داد. به طور مثال، کاربر به دنبال کانالی علمی می باشد. برنامه ی جهت با استفاده از الگوریتم های جستجوی هوشمند بر این مشکل غلبه کرده و این امکان را به کاربر می دهد که جستجوی خود را بر روی عنوان یا شرح یا لینک انجام دهد به این صورت که کاربر می تواند با جست و جوی قسمتی از عنوان یا لینک مورد نظرش،کانال های مورد نظرش را بیابد."
                android:id="@+id/pic_04_tv"
                android:layout_marginTop="25dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="راهنمای جست و جو"
                android:id="@+id/btnHelper02"
                android:textColor="@color/btn_login_bg"
                android:background="@drawable/button_01"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:text=" سایت برنامه "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="16dp"
                android:autoLink="web"
                android:textColorLink="@color/colorPrimary"
                android:text="www.jahat.net"
                android:layout_marginTop="5dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:text=" پشتیبانی "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="16dp"
                android:autoLink="web"
                android:textColorLink="@color/colorPrimary"
                android:text="support@jahat.net"
                android:layout_marginTop="5dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text=" تمامی حقوق برای شرکت هوش مصنوعی فردان هفت اقلیم محفوظ می باشد "/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_vrsion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
