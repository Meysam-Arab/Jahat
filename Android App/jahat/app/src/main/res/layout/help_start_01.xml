<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layoutDirection="ltr"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:padding="5dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/name00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:text="خوش آمدید،امیدواریم این برنامه برای شما مفید باشد." />
            <TextView
                android:id="@+id/name01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="19dp"
                android:gravity="center_horizontal"
                android:text="برای جست و جو موضوع یا اسم مورد نظر فقط کافی است،کلمه ی مورد نظر را در این قسمت وارد کنید:" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/help01"
                android:layout_marginBottom="20dp"
                android:id="@+id/imageViewHelper01" />

            <TextView
                android:id="@+id/name02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="19dp"
                android:gravity="center_horizontal"
                android:text="برای جست و جو آدرس کانال(گروه یا ربات) از @ ابتدای کلمه ی مورد نظر استفاده کنید:" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/help02"
                android:layout_marginBottom="20dp"
                android:id="@+id/imageViewHelper02" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="متوجه شدم"
                android:id="@+id/btnHelper01"
                android:textColor="@color/btn_login_bg"
                android:background="@drawable/button_01"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
